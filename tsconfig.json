{
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "outDir": "./dist/",
    "allowJs": true,
    "baseUrl": "./",
    "paths": {
      "~/src/*": ["src/*"],
      "~/test/*": ["test/*"],
      "~/types/*": ["types/*"]
    }
  },
  "include": ["./src/**/*"],
  "exclude": ["**/*.test.ts", "**/*.test.tsx", "**/*.spec.ts", "**/*.spec.tsx", "node_modules"]
}
